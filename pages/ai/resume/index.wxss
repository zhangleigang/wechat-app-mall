.page { display: flex; flex-direction: column; height: 100vh; }
.header { padding: 12px; border-bottom: 1px solid #eee; display: flex; justify-content: space-between; align-items: center; }
.title { font-weight: bold; font-size: 16px; }
.actions { display: flex; gap: 8px; }
.chat { flex: 1; padding: 12px; background: #fafafa; }
.msg { margin-bottom: 10px; padding: 8px; border-radius: 6px; line-height: 1.6; }
.msg.user { background: #e8f4ff; align-self: flex-end; }
.msg.assistant { background: #fff; border: 1px solid #eee; }
.input-bar { display: flex; gap: 8px; padding: 12px; border-top: 1px solid #eee; }
.ipt { flex: 1; background: #fff; border: 1px solid #ddd; border-radius: 6px; padding: 8px; }
.send { width: 88px; }