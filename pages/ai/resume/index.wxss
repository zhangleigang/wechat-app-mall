/* 使用全局样式系统 */

/* ==================== 页面容器 ==================== */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: var(--bg-page);
  padding-bottom: env(safe-area-inset-bottom);
}

/* ==================== 渐变头部 ==================== */
.gradient-header {
  background: var(--primary-gradient);
  padding: var(--space-lg);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-md);
}

.header-text {
  flex: 1;
}

.header-text .text-2xl {
  display: block;
  margin-bottom: var(--space-xs);
}

.header-text .text-sm {
  display: block;
}

.header-upload-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2px solid rgba(255, 255, 255, 0.5);
  border-radius: var(--radius-round);
  padding: var(--space-sm) var(--space-lg);
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  transition: all var(--transition-base);
}

.header-upload-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.btn-icon {
  font-size: 16px;
}

.btn-text {
  font-size: var(--font-sm);
  font-weight: var(--font-bold);
  color: var(--text-white);
}


/* ==================== 上传引导区域 ==================== */
.upload-section {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--space-2xl);
  margin: var(--space-lg);
  text-align: center;
  box-shadow: var(--shadow-sm);
}

.upload-icon {
  font-size: 64px;
  margin-bottom: var(--space-lg);
  opacity: 0.8;
}

.upload-title {
  display: block;
  font-size: var(--font-lg);
  font-weight: var(--font-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-sm);
}

.upload-desc {
  display: block;
  font-size: var(--font-sm);
  color: var(--text-tertiary);
  margin-bottom: var(--space-xl);
}

.upload-btn {
  background: var(--primary-gradient);
  border: none;
  border-radius: var(--radius-round);
  padding: var(--space-md) var(--space-2xl);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
}

.upload-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

.upload-btn-text {
  font-size: var(--font-md);
  font-weight: var(--font-bold);
  color: var(--text-white);
}

/* ==================== 简历状态卡片 ==================== */
.resume-status-card {
  background: var(--success-lighter);
  border: 2px solid var(--success-color);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin: var(--space-lg);
  display: flex;
  align-items: center;
  gap: var(--space-md);
  box-shadow: var(--shadow-sm);
}

.status-icon {
  font-size: 32px;
  flex-shrink: 0;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.file-name {
  font-size: var(--font-md);
  font-weight: var(--font-bold);
  color: var(--success-dark);
}

.upload-time {
  font-size: var(--font-xs);
  color: var(--success-color);
}

.reupload-btn {
  background: var(--bg-card);
  border: 2px solid var(--success-color);
  border-radius: var(--radius-md);
  padding: var(--space-sm) var(--space-md);
  transition: all var(--transition-base);
}

.reupload-btn:active {
  transform: scale(0.95);
  background: var(--bg-hover);
}

.reupload-text {
  font-size: var(--font-xs);
  color: var(--success-color);
  font-weight: var(--font-bold);
}


/* ==================== 快捷分析选项 ==================== */
.quick-analysis-section {
  padding: var(--space-lg);
  background: var(--bg-card);
  border-bottom: 1px solid var(--border-light);
}

.quick-analysis-title {
  font-size: var(--font-md);
  font-weight: var(--font-bold);
  color: var(--text-primary);
  display: block;
  margin-bottom: var(--space-md);
}

.quick-analysis-scroll {
  width: 100%;
  white-space: nowrap;
}

.quick-analysis-list {
  display: inline-flex;
  gap: var(--space-md);
  padding-bottom: var(--space-xs);
}

.quick-analysis-item {
  display: inline-block;
  background: var(--primary-lighter);
  border: 2px solid var(--primary-color);
  border-radius: var(--radius-lg);
  padding: var(--space-md) var(--space-lg);
  white-space: normal;
  min-width: 160px;
  max-width: 200px;
  transition: all var(--transition-base);
}

.quick-analysis-item:active {
  transform: scale(0.95);
  background: var(--primary-color);
}

.quick-analysis-item:active .quick-analysis-text {
  color: var(--text-white);
}

.quick-analysis-text {
  font-size: var(--font-sm);
  color: var(--primary-color);
  font-weight: var(--font-bold);
  line-height: var(--line-height-normal);
  word-wrap: break-word;
}


/* ==================== 对话容器（复用） ==================== */
.chat-container {
  flex: 1;
  background: var(--bg-page);
}

.messages-wrapper {
  padding: var(--space-lg) var(--space-md);
  min-height: 100%;
}

/* ==================== 消息项 ==================== */
.message-item {
  margin-bottom: var(--space-xl);
  animation: slideUp var(--transition-base);
}

.user-message {
  display: flex;
  justify-content: flex-end;
}

.ai-message {
  display: flex;
  justify-content: flex-start;
}

/* ==================== 消息气泡 ==================== */
.user-bubble,
.ai-bubble {
  display: flex;
  align-items: flex-end;
  gap: var(--space-sm);
  max-width: 85%;
}

.user-bubble {
  flex-direction: row-reverse;
}

/* ==================== 头像 ==================== */
.message-avatar {
  width: 40px;
  height: 40px;
  border-radius: var(--radius-circle);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: var(--shadow-sm);
}

.user-avatar {
  background: var(--primary-gradient);
}

.ai-avatar {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.avatar-text {
  font-size: var(--font-sm);
  font-weight: var(--font-bold);
  color: var(--text-white);
}

/* ==================== 消息气泡内容 ==================== */
.message-bubble {
  border-radius: var(--radius-lg);
  padding: var(--space-md) var(--space-lg);
  position: relative;
  box-shadow: var(--shadow-sm);
  max-width: 100%;
}

.user-bubble-content {
  background: var(--primary-gradient);
  color: var(--text-white);
}

.user-bubble-content::after {
  content: '';
  position: absolute;
  right: -8px;
  bottom: 12px;
  width: 0;
  height: 0;
  border-left: 8px solid var(--primary-color);
  border-top: 8px solid transparent;
  border-bottom: 8px solid transparent;
}

.ai-bubble-content {
  background: var(--bg-card);
  color: var(--text-primary);
  border: 1px solid var(--border-light);
}

.ai-bubble-content::after {
  content: '';
  position: absolute;
  left: -8px;
  bottom: 12px;
  width: 0;
  height: 0;
  border-right: 8px solid var(--bg-card);
  border-top: 8px solid transparent;
  border-bottom: 8px solid transparent;
}

/* ==================== 消息文本 ==================== */
.message-text {
  font-size: var(--font-md);
  line-height: var(--line-height-relaxed);
  word-wrap: break-word;
  white-space: pre-wrap;
  display: block;
  margin-bottom: var(--space-sm);
}

.user-bubble-content .message-text {
  color: var(--text-white);
}

.ai-bubble-content .message-text {
  color: var(--text-primary);
}

/* ==================== 消息时间 ==================== */
.message-time {
  font-size: var(--font-xs);
  opacity: 0.7;
  display: block;
}

.user-bubble-content .message-time {
  color: var(--text-white);
  text-align: right;
}

.ai-bubble-content .message-time {
  color: var(--text-tertiary);
}

/* ==================== 消息底部占位 ==================== */
.messages-bottom {
  height: var(--space-lg);
}

/* ==================== 消息操作按钮 ==================== */
.message-actions {
  display: flex;
  gap: var(--space-sm);
  margin-top: var(--space-sm);
  padding-top: var(--space-sm);
  border-top: 1px solid var(--border-light);
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 4px 8px;
  background: var(--bg-hover);
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.action-btn:active {
  transform: scale(0.95);
  background: var(--bg-active);
}

.action-icon {
  font-size: 12px;
}

.action-text {
  font-size: var(--font-xs);
  color: var(--text-secondary);
}

/* ==================== 打字指示器 ==================== */
.typing-bubble {
  background: var(--bg-hover) !important;
  border-color: var(--border-color) !important;
}

.typing-indicator {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.typing-text {
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

.typing-dots {
  display: flex;
  gap: 4px;
}

.dot {
  width: 6px;
  height: 6px;
  background: var(--primary-color);
  border-radius: var(--radius-circle);
  animation: typing 1.4s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.4;
  }
  30% {
    transform: translateY(-8px);
    opacity: 1;
  }
}


/* ==================== 输入区域（复用） ==================== */
.input-section {
  background: var(--bg-card);
  border-top: 1px solid var(--border-light);
  padding: var(--space-md) var(--space-lg);
}

/* ==================== 功能按钮栏 ==================== */
.function-bar {
  display: flex;
  gap: var(--space-md);
  margin-bottom: var(--space-md);
  justify-content: center;
}

.function-btn {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  padding: var(--space-sm) var(--space-md);
  background: var(--bg-page);
  border-radius: var(--radius-round);
  cursor: pointer;
  transition: all var(--transition-base);
}

.function-btn:active {
  transform: scale(0.95);
  background: var(--bg-hover);
}

.function-icon {
  font-size: 16px;
}

.function-text {
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

/* ==================== 输入容器 ==================== */
.input-container {
  display: flex;
  gap: var(--space-md);
  align-items: flex-end;
}

.input-wrapper {
  flex: 1;
  position: relative;
  background: var(--bg-page);
  border-radius: var(--radius-xl);
  border: 2px solid var(--border-light);
  transition: all var(--transition-base);
}

.input-wrapper:focus-within {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px var(--primary-lighter);
}

/* ==================== 输入框 ==================== */
.message-input {
  width: 100%;
  min-height: 44px;
  max-height: 120px;
  padding: var(--space-md) var(--space-lg);
  font-size: var(--font-md);
  line-height: var(--line-height-normal);
  background: transparent;
  border: none;
  border-radius: var(--radius-xl);
  resize: none;
  color: var(--text-primary);
}

.message-input::placeholder {
  color: var(--text-tertiary);
}

/* ==================== 字数统计 ==================== */
.char-count {
  position: absolute;
  bottom: 6px;
  right: var(--space-md);
  background: var(--bg-card);
  padding: 2px 6px;
  border-radius: var(--radius-sm);
}

.count-text {
  font-size: var(--font-xs);
  color: var(--text-tertiary);
}

/* ==================== 发送按钮 ==================== */
.send-button-wrapper {
  flex-shrink: 0;
}

.send-button {
  width: 48px;
  height: 48px;
  border-radius: var(--radius-circle);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-md);
  padding: 0;
}

.send-button.active {
  background: var(--primary-gradient);
}

.send-button.active:active {
  transform: scale(0.9);
  box-shadow: var(--shadow-sm);
}

.send-button.disabled {
  background: var(--bg-disabled);
  cursor: not-allowed;
}

.send-icon {
  font-size: 20px;
}

.send-button.active .send-icon {
  color: var(--text-white);
}

.send-button.disabled .send-icon {
  color: var(--text-disabled);
}

.send-icon.loading {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* ==================== 动画效果 ==================== */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
