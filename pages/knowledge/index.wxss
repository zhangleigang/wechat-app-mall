.page { display: flex; flex-direction: column; height: 100vh; }
.header { padding: 12px; border-bottom: 1px solid #eee; }
.title { font-weight: bold; font-size: 16px; }
.search { margin-top: 8px; display: flex; gap: 8px; }
.ipt { flex: 1; background: #fff; border: 1px solid #ddd; border-radius: 6px; padding: 8px; }
.btn { width: 88px; }
.body { display: flex; flex: 1; min-height: 0; }
.sidebar { width: 120px; border-right: 1px solid #eee; padding: 12px; box-sizing: border-box; }
.sub { color: #666; font-size: 13px; }
.cat-list { display: flex; gap: 8px; flex-wrap: wrap; margin-top: 8px; }
.cat { padding: 6px 10px; background: #f6f6f6; border-radius: 999px; font-size: 12px; }
.cat.active { background: #e6f2ff; color: #1677ff; }
.content { flex: 1; padding: 12px; box-sizing: border-box; overflow: auto; }
.card { padding: 12px; border: 1px solid #eee; border-radius: 8px; margin-bottom: 12px; background: #fff; }
.card-title { font-size: 15px; font-weight: 600; }
.card-summary { color: #666; margin-top: 6px; }
.tags { display: flex; gap: 6px; margin-top: 8px; flex-wrap: wrap; }
.tag { font-size: 12px; padding: 3px 6px; background: #f6f6f6; border-radius: 999px; color: #555; }
.empty { color: #999; text-align: center; padding: 24px; }