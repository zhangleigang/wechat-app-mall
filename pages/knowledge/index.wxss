/* 使用全局样式系统，大部分样式已在 app.wxss 中定义 */

/* 统计徽章 */
.stat-badge {
  background: rgba(255, 255, 255, 0.25);
  padding: 6px 16px;
  border-radius: var(--radius-round);
  backdrop-filter: blur(10px);
}

/* 主内容区域 */
.main-content {
  display: flex;
  height: calc(100vh - 200rpx);
  background: var(--bg-page);
}

/* 左侧分类导航 */
.category-sidebar {
  width: 160rpx;
  background: var(--bg-card);
  border-right: 1px solid var(--border-light);
  flex-shrink: 0;
}

.category-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 8rpx;
  cursor: pointer;
  transition: all var(--transition-base);
  border-bottom: 1px solid var(--border-lighter);
}

.category-item:active {
  background: var(--bg-hover);
}

.category-item.active {
  background: var(--primary-lighter);
}

.category-icon {
  font-size: 28px;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 22rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.3;
  word-break: break-all;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.category-item.active .category-name {
  color: var(--primary-color);
  font-weight: var(--font-semibold);
}

.category-indicator {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 50rpx;
  background: var(--primary-gradient);
  border-radius: 6rpx 0 0 6rpx;
}

/* 主题区域 */
.topic-section {
  flex: 1;
  overflow: auto;
  background: var(--bg-page);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-lg);
  background: var(--bg-card);
  border-bottom: 1px solid var(--border-light);
  position: sticky;
  top: 0;
  z-index: 10;
}

.section-title {
  font-size: var(--font-lg);
  font-weight: var(--font-bold);
  color: var(--text-primary);
}

.section-count {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
  background: var(--bg-page);
  padding: 4px 12px;
  border-radius: var(--radius-round);
}

/* 主题列表 */
.topic-list {
  padding: var(--space-md) var(--space-lg);
}

/* 主题卡片 */
.topic-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-md);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  cursor: pointer;
}

.topic-card:active {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-sm);
}

.card-title {
  flex: 1;
  font-size: var(--font-lg);
  font-weight: var(--font-semibold);
  color: var(--text-primary);
  line-height: var(--line-height-normal);
}

.arrow-icon {
  font-size: 18px;
  color: var(--text-tertiary);
  margin-left: var(--space-sm);
  transition: all var(--transition-base);
}

.topic-card:active .arrow-icon {
  transform: translateX(4px);
  color: var(--primary-color);
}

.card-summary {
  font-size: var(--font-md);
  color: var(--text-secondary);
  line-height: var(--line-height-relaxed);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: var(--space-md);
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: var(--space-md);
  border-top: 1px solid var(--border-light);
}

.card-meta {
  display: flex;
  align-items: center;
}

.question-count {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
}

.card-tags {
  display: flex;
  gap: var(--space-xs);
  flex-wrap: wrap;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 40px;
  text-align: center;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: var(--space-lg);
  opacity: 0.5;
}

.empty-text {
  font-size: var(--font-lg);
  color: var(--text-secondary);
  margin-bottom: var(--space-sm);
}

.empty-hint {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
  margin-bottom: var(--space-xl);
}

.empty-action {
  background: var(--primary-gradient);
  color: var(--text-white);
  padding: var(--space-md) var(--space-2xl);
  border-radius: var(--radius-round);
  cursor: pointer;
  transition: all var(--transition-base);
}

.empty-action:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.btn-text {
  font-size: var(--font-md);
  font-weight: var(--font-medium);
  color: var(--text-white);
}

/* 
==================== 问答列表样式 ==================== */

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  height: 100%;
  background: var(--bg-page);
}

/* 问答区域 */
.qa-section {
  padding: var(--space-md);
}

/* 主题分组 */
.topic-group {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--space-lg);
}

/* 主题头部 */
.topic-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-lg);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  cursor: pointer;
  transition: all var(--transition-base);
}

.topic-header:active {
  opacity: 0.9;
}

.topic-left {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  flex: 1;
}

.topic-icon {
  font-size: 32px;
  flex-shrink: 0;
}

.topic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.topic-title {
  font-size: var(--font-lg);
  font-weight: var(--font-bold);
  color: var(--text-white);
}

.topic-meta {
  font-size: var(--font-sm);
  color: rgba(255, 255, 255, 0.8);
}

.expand-icon {
  font-size: var(--font-md);
  color: var(--text-white);
  transition: transform var(--transition-base);
}

/* 问题列表容器 */
.questions-wrapper {
  padding: var(--space-md);
  background: var(--bg-page);
}

/* 问题项 */
.question-item {
  background: var(--bg-card);
  border-radius: var(--radius-md);
  margin-bottom: var(--space-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.question-item:last-child {
  margin-bottom: 0;
}

/* 问题头部 */
.question-header {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  padding: var(--space-lg);
  cursor: pointer;
  transition: all var(--transition-base);
}

.question-header:active {
  background: var(--bg-hover);
}

.question-number {
  width: 36px;
  height: 36px;
  background: var(--primary-gradient);
  color: var(--text-white);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-sm);
  font-weight: var(--font-bold);
  flex-shrink: 0;
}

.question-text {
  flex: 1;
  font-size: var(--font-md);
  font-weight: var(--font-medium);
  color: var(--text-primary);
  line-height: var(--line-height-relaxed);
}

.question-toggle {
  width: 24px;
  height: 24px;
  background: var(--bg-page);
  color: var(--primary-color);
  border-radius: var(--radius-circle);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-lg);
  font-weight: var(--font-bold);
  flex-shrink: 0;
}

/* 答案内容 */
.answer-content {
  padding: var(--space-lg);
  padding-top: 0;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.answer-label {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  margin-bottom: var(--space-md);
  padding-bottom: var(--space-sm);
  border-bottom: 2px solid var(--primary-lighter);
}

.answer-icon {
  font-size: 20px;
}

.answer-title {
  font-size: var(--font-md);
  font-weight: var(--font-bold);
  color: var(--primary-color);
}

.answer-text {
  font-size: var(--font-md);
  color: var(--text-secondary);
  line-height: var(--line-height-relaxed);
  white-space: pre-wrap;
  word-wrap: break-word;
}

/* 底部占位 */
.bottom-space {
  height: var(--space-xl);
}


