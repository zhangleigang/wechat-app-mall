.page { display: flex; flex-direction: column; min-height: 100vh; background: #fff; }
.empty { color: #999; text-align: center; padding: 24px; }
.header { padding: 16px; border-bottom: 1px solid #eee; }
.title { font-weight: 700; font-size: 18px; }
.summary { color: #666; margin-top: 6px; }
.tags { display: flex; gap: 6px; margin-top: 8px; flex-wrap: wrap; }
.tag { font-size: 12px; padding: 3px 6px; background: #f6f6f6; border-radius: 999px; color: #555; }
.section { padding: 16px; border-bottom: 1px solid #f5f5f5; }
.sec-title { font-size: 14px; font-weight: 600; color: #333; }
.li { margin-top: 8px; color: #444; }
.code { margin-top: 8px; padding: 8px; background: #fafafa; border: 1px solid #eee; border-radius: 8px; font-family: Menlo, Monaco, Consolas, monospace; font-size: 12px; white-space: pre-wrap; }